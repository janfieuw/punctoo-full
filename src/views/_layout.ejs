<%- include("partials/head", { 
  title: title || "MyPunctoo",
  bodyClass: bodyClass || ""
}) %>

<div class="topbar">
  <div class="left">
    <span class="logo-dot"></span>
    <strong>MyPunctoo</strong>
    <% if (badge) { %>
      <span class="badge"><%= badge %></span>
    <% } %>
  </div>

  <div class="right">
    <% if (topLink) { %>
      <a class="btn ghost" href="<%= topLink.href %>"><%= topLink.label %></a>
    <% } %>

    <% if (logoutAction) { %>
      <form method="post" action="<%= logoutAction %>" style="display:inline;">
        <button type="submit" class="btn ghost">Uitloggen</button>
      </form>
    <% } %>
  </div>
</div>

<div class="page-wrap">