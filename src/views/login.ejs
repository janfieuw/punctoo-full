<%- include("partials/head", {
  title: "Login - MyPunctoo",
  hideTopbar: true,
  bodyClass: "auth-demo",
  pageCss: "/public/css/auth-demo.css"
}) %>

<div class="wrap auth-wrap">
  <div class="demo-shell">
    <div class="demo-left">
      <h1>DEMO UITTESTEN<br/>IN 5 STAPPEN</h1>
      <p class="sub">
        Log in en ga verder met de MyPunctoo back-office.
      </p>

      <div class="step">Stap 1: login.</div>

      <% if (error) { %><div class="demo-error"><%= error %></div><% } %>

      <form class="demo-form" method="post" action="/login">
        <label>E-mail *</label>
        <input name="email" type="email" value="<%= email || '' %>" required/>

        <label>Wachtwoord *</label>
        <input name="password" type="password" required/>

        <button class="demo-btn" type="submit">Inloggen</button>

        <div style="margin-top:12px;font-weight:800;">
          <a href="/signup">Account aanmaken</a>
        </div>
      </form>
    </div>

    <div class="demo-right" aria-hidden="true"></div>
  </div>
</div>

<%- include("partials/foot") %>
