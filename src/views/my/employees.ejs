<%- include("../_layout", { 
  title: "Werknemers", 
  badge: company.company_name, 
  logoutAction: "/logout",
  topLink: { href: "/app", label: "Terug" }
}) %>

<div class="card">
  <h2>Werknemers</h2>
  <p>Onbeperkt. Per werknemer blijft de koppelcode zichtbaar.</p>

  <!-- Nieuwe werknemer -->
  <form method="post" action="/app/employees/add" style="display:flex; gap:12px; align-items:center; margin-bottom:20px;">
    <label>Nieuwe werknemer</label>
    <input type="text" name="name" placeholder="Naam werknemer" required />
    <button class="btn" type="submit">Toevoegen</button>
  </form>

  <table class="table">
    <thead>
      <tr>
        <th>Naam</th>
        <th>Koppelcode</th>
        <th>Wijzigen</th>
        <th style="text-align:right;">Referentietijden</th>
      </tr>
    </thead>

    <tbody>
      <% employees.forEach(e => { %>
        <tr>
          <td><%= e.employee_name %></td>

          <td><b><%= e.pairing_code %></b></td>

          <td>
            <form method="post" action="/app/employees/<%= e.id %>/update-name" style="display:flex; gap:8px;">
              <input type="text" name="name" value="<%= e.employee_name %>" required />
              <button class="btn ghost" type="submit">Opslaan</button>
            </form>
          </td>

          <td style="text-align:right;">
            <a class="btn ghost" href="/app/employees/<%= e.id %>/reference">
              Open
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>