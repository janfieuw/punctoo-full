<% const body = `
  <div class="card">
    <div class="h1">Klantfiche</div>

    <div class="kpi">
      <div class="pill-light">Klantnummer: ${company.customer_number}</div>
      <div class="pill-light">Start abonnement: ${company.subscription_start_date}</div>
      <div class="pill-light">BTW: ${company.vat_number}</div>
    </div>

    <div class="hr"></div>

    <div class="grid-2">
      <div>
        <div class="h2">Bedrijfsgegevens</div>
        <div style="font-weight:900">${company.company_name}</div>
        <div class="p">${company.company_address_line1} ${company.company_address_line2 || ""}</div>
        <div class="p">${company.company_postcode} ${company.company_city} (${company.company_country})</div>
      </div>
      <div>
        <div class="h2">Leveringsadres</div>
        <div style="font-weight:900">${company.delivery_name}</div>
        <div class="p">${company.delivery_address_line1} ${company.delivery_address_line2 || ""}</div>
        <div class="p">${company.delivery_postcode} ${company.delivery_city} (${company.delivery_country})</div>
      </div>
    </div>

    <div class="hr"></div>

    <div class="grid-2">
      <div>
        <div class="h2">ScanTags</div>
        <table class="table">
          <thead><tr><th>Naam</th><th>Code</th></tr></thead>
          <tbody>
            ${tags.map(t => `<tr><td>${t.tag_name}</td><td style="font-weight:900">${t.tag_code}</td></tr>`).join("") || `<tr><td colspan="2">Geen tags</td></tr>`}
          </tbody>
        </table>
      </div>
      <div>
        <div class="h2">Bestellingen extra ScanTags</div>
        <table class="table">
          <thead><tr><th>Datum</th><th>Aantal</th><th>Status</th></tr></thead>
          <tbody>
            ${orders.map(o => `<tr><td>${o.date}</td><td style="font-weight:900">${o.quantity}</td><td>${o.status}</td></tr>`).join("") || `<tr><td colspan="3">Geen bestellingen</td></tr>`}
          </tbody>
        </table>
      </div>
    </div>
  </div>
` %>

<%- include("_layout", { title:"Klantfiche - Admin", badge:"Admin", topLink:{href:"/admin/customers",label:"Terug naar lijst"}, logoutAction:"/admin/logout", body }) %>
