<% const body = `
  <div class="card">
    <div class="h1">Klanten</div>
    <div class="p">Gesorteerd op start abonnement.</div>

    <table class="table">
      <thead>
        <tr>
          <th>Start abonnement</th>
          <th>Klantnr</th>
          <th>Bedrijf</th>
          <th>BTW</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        ${customers.map(c => `
          <tr>
            <td>${c.subscription_start_date}</td>
            <td style="font-weight:900">${c.customer_number}</td>
            <td><a class="btn" href="/admin/customers/${c.id}" style="padding:8px 12px">${c.company_name}</a></td>
            <td>${c.vat_number}</td>
            <td>${c.admin_seen ? "gezien" : "nieuw"}</td>
          </tr>
        `).join("")}
      </tbody>
    </table>
  </div>
` %>

<%- include("../_layout", { title:"Klanten - Admin", badge:"Admin", topLink:{href:"/admin",label:"Terug"}, logoutAction:"/admin/logout", body }) %>
