<% const body = `
  ${error ? `<div class="demo-error">${error}</div>` : ``}

  <form method="post" action="/signup" class="demo-form">
    <label>E-mail</label>
    <input name="email" type="email" value="${values.email || ""}" required />

    <label>Wachtwoord</label>
    <input name="password" type="password" required />

    <div class="demo-divider"></div>

    <label>Bedrijfsnaam</label>
    <input name="company_name" value="${values.company_name || ""}" required />

    <label>BTW-nummer</label>
    <input name="vat_number" value="${values.vat_number || ""}" required />

    <label>Bedrijfsadres</label>
    <input name="company_address_line1" value="${values.company_address_line1 || ""}" placeholder="Straat + nr" required />
    <input name="company_address_line2" value="${values.company_address_line2 || ""}" placeholder="Bus, verdieping, ... (optioneel)" />

    <div class="demo-row">
      <div>
        <label>Postcode</label>
        <input name="company_postcode" value="${values.company_postcode || ""}" required />
      </div>
      <div>
        <label>Stad</label>
        <input name="company_city" value="${values.company_city || ""}" required />
      </div>
    </div>

    <label>Land</label>
    <input name="company_country" value="${values.company_country || "BE"}" required />

    <div class="demo-divider"></div>

    <label>Leveringsadres</label>
    <input name="delivery_name" value="${values.delivery_name || ""}" placeholder="T.a.v." required />
    <input name="delivery_address_line1" value="${values.delivery_address_line1 || ""}" placeholder="Straat + nr" required />
    <input name="delivery_address_line2" value="${values.delivery_address_line2 || ""}" placeholder="Bus, verdieping, ... (optioneel)" />

    <div class="demo-row">
      <div>
        <label>Postcode</label>
        <input name="delivery_postcode" value="${values.delivery_postcode || ""}" required />
      </div>
      <div>
        <label>Stad</label>
        <input name="delivery_city" value="${values.delivery_city || ""}" required />
      </div>
    </div>

    <label>Land</label>
    <input name="delivery_country" value="${values.delivery_country || "BE"}" required />

    <button class="demo-btn" type="submit">ACCOUNT AANMAKEN</button>

    <a class="demo-link" href="/login">Ik heb al een account</a>
  </form>
` %>

<%- include("_auth_shell", { title: "Account aanmaken - MyPunctoo", stepTitle: "STAP 1: ACCOUNT AANMAKEN.", body }) %>
